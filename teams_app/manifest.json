{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "{{BOT_APP_ID}}",
  "packageName": "com.plansetreview.bot",
  "developer": {
    "name": "PlanSet Review",
    "websiteUrl": "https://github.com/jonahknip/planset-review-agent",
    "privacyUrl": "https://github.com/jonahknip/planset-review-agent",
    "termsOfUseUrl": "https://github.com/jonahknip/planset-review-agent"
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "name": {
    "short": "PlanSet Review",
    "full": "PlanSet Review Agent"
  },
  "description": {
    "short": "Review civil engineering plansets and generate PM reports",
    "full": "Upload PDF plansets directly or share OneDrive/SharePoint links to receive comprehensive PM review reports. Analyzes project information, sheet index, disciplines covered, key features, and provides actionable recommendations."
  },
  "accentColor": "#2B579A",
  "bots": [
    {
      "botId": "{{BOT_APP_ID}}",
      "scopes": [
        "personal",
        "team",
        "groupchat"
      ],
      "supportsFiles": true,
      "isNotificationOnly": false,
      "commandLists": [
        {
          "scopes": [
            "personal",
            "team",
            "groupchat"
          ],
          "commands": [
            {
              "title": "help",
              "description": "Show usage instructions"
            }
          ]
        }
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "*.azurewebsites.net",
    "*.sharepoint.com",
    "*.onedrive.com"
  ]
}
